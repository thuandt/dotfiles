  micha/resty \
  changyuheng/fz \
  make'PREFIX=$ZPFX install' mptre/yank \
  make'PREFIX=$ZPFX install' AltraMayor/f3 \
  make'install prefix=$ZPFX' axboe/fio \
  thuandt/zsh-config \
  thuandt/zsh-terraform \
  thuandt/zsh-vault \
  thuandt/zsh-pipx

