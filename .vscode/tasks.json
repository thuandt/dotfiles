{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "install-all",
      "type": "shell",
      "command": "./install",
      "problemMatcher": []
    },
    {
      "label": "install-standalone",
      "type": "shell",
      "command": "./install-standalone ${input:dotbotConfig}",
      "problemMatcher": []
    },
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "dotbotConfig",
      "description": "What config file of dotbot do you want to run?",
      "options": [
        "git",
        "zsh",
        "misc",
        "systemd",
        "wezterm",
        "doomemacs",
        "mpv"
      ],
      "default": "misc"
    }
  ]
}
