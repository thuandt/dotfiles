[core]
    editor = nvim
    pager = diff-so-fancy | less -x2 -RFXSi
    precomposeunicode = true
    excludesfile = ~/.gitignore_global
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

#[init]
#    templatedir = ~/.git-templates

[user]
    name = Thuan Duong
    email = thuandt26@gmail.com
    signingkey = 0x0A1E3BB48B35A2F3

[commit]
    gpgsign = true

[pull]
    ff = only

[push]
    default = current
    followTags = false

[blame]
    date = relative

[tag]
    sort = version:refname

[status]
    showUntrackedFiles = all

[diff]
    tool = meld

[difftool]
    prompt = false

[difftool "idea"]
    cmd = idea diff "$LOCAL" "$REMOTE"

[difftool "charm"]
    cmd = charm diff "$LOCAL" "$REMOTE"

[merge]
    ff = only
    tool = code
    conflictstyle = diff3

[mergetool]
    prompt = false

[mergetool "code"]
    cmd = code --merge --wait $REMOTE $LOCAL $BASE $MERGED

[mergetool "meld"]
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[mergetool "idea"]
    cmd = idea merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[mergetool "charm"]
    cmd = charm merge "$LOCAL" "$REMOTE" "$BASE" "$MERGED"

[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool "bcompare"]
    trustExitCode = true

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
    commit = yellow bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[credential]
	  helper = /usr/lib/git-core/git-credential-libsecret

[pager]
    diff = diff-so-fancy | less -x2 -RFXSi
    show = diff-so-fancy | less -x2 -RFXSi

[github]
    user = thuandt

[tig]
    line-graphics = utf-8
    tab-size = 2

[alias]
    prune = fetch --prune
    undo = reset --soft HEAD^
    stashes = stash list
    stash-all = stash save --include-untracked
    unstash = stash pop
    unstage = reset -q HEAD --
    back = checkout "-"
    discard = checkout --
    nevermind = !git reset --hard HEAD && git clean -d -f
    uncommit = reset --mixed HEAD~
    save = commit -m
    resave = commit --amend
    invert = revert
    last = log -1 HEAD --format=format:"%Cred%H"
    summary = status -u -s
    branchout = checkout -b
    tags = tag
    branches = branch -a
    remotes = remote -v
    prestage = diff -w --word-diff=color
    precommit = diff --cached -w --word-diff=color --word-diff-regex='[^[:space:]<>]+'
    move = mv
    remove = rm
    unmerged = branch --no-merged
    what = show -w
    untrack = rm -r --cached
    rewrite = rebase -i
    amend = commit --amend
    contributors = shortlog -s -n
    filetrail = log --follow -p -w
    mergetrail = log --ancestry-path --merges
    unmerged = diff --name-only --diff-filter=U
    update-submodules = submodule update --init --recursive
    upgrade-submodules = submodule update --init --remote

#[includeIf "gitdir:~/src/github.com/work_org"]
#    path = ~/.gitconfig_work

[url "git@github.com:"]
    insteadOf = gh:

[url "git@github.com:"]
    insteadOf = https://github.com/

[url "git@gitlab.com:"]
    insteadOf = gl:

[url "git@bitbucket.org:"]
    insteadOf = bb:
