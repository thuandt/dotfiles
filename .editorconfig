# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 120

# Google Shell Style
[*.{sh,bash}]
indent_size = 2
indent_style = space
max_line_length = 80

[*.json]
insert_final_newline = ignore

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
